<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fancy_menu_background_color">

    <TextView
        android:id="@+id/log_out_account"
        android:layout_width="@dimen/openthos_view_size_112"
        android:layout_height="@dimen/openthos_view_size_30"
        android:textColor="@color/menu_text_color"
        android:gravity="center"
        android:textSize="@dimen/openthos_text_size_13"
        android:text="@string/account_log_out" />

    <TextView
        android:id="@+id/about_account"
        android:layout_width="@dimen/openthos_view_size_112"
        android:layout_height="@dimen/openthos_view_size_30"
        android:gravity="center"
        android:textColor="@color/menu_text_color"
        android:textSize="@dimen/openthos_text_size_13"
        android:text="@string/account_about" />

</LinearLayout>