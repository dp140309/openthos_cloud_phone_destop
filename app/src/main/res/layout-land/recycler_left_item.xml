<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="@dimen/openthos_view_size_40"
    android:id="@+id/item_list_left">

    <TextView
        android:id="@+id/left_text_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/fancy_left_gray"
        android:textSize="@dimen/openthos_text_size_14"
        android:layout_marginLeft="@dimen/openthos_about_size"/>

    <TextView
        android:id="@+id/recycler_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/fancy_left_number_gray"
        android:textSize="@dimen/openthos_text_size_14"
        android:layout_marginRight="@dimen/openthos_about_size"/>

</RelativeLayout>