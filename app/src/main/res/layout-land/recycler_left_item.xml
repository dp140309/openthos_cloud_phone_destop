<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="@dimen/openthos_left_button_size"
    android:id="@+id/item_list_left">

    <TextView
        android:id="@+id/left_text_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/fancy_letf_gray"
        android:textSize="18sp"
        android:layout_marginLeft="@dimen/openthos_about_size"/>

    <TextView
        android:id="@+id/recycler_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_weight="4"
        android:textColor="@color/fancy_letf_number_gray"
        android:textSize="16sp"
        android:layout_marginRight="@dimen/openthos_about_size"/>

</RelativeLayout>