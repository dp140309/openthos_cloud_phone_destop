<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/openthos_view_size_35">

    <ImageView
        android:id="@+id/title_iv_search"
        style="@style/TitleImageViewStyle"
        android:layout_marginLeft="@dimen/openthos_about_size"
        android:src="@drawable/openthos_search" />

    <EditText
        android:id="@+id/title_et_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/title_iv_search"
        android:background="@null"
        android:textColor="@color/fancy_search_text_color"
        android:hint="@string/openthos_title_search"
        android:textSize="@dimen/openthos_text_size_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#f1f1f1" />

</RelativeLayout>