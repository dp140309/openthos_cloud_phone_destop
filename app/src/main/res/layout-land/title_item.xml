<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/openthos_left_button_size"
    android:background="@color/fancy_right_title_color" >

    <ImageView
        android:id="@+id/back_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/openthos_title_back" />

    <ImageView
        android:id="@+id/forward_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/back_view"
        android:src="@drawable/openthos_title_further" />

    <TextView
        android:id="@+id/download_view"
        style="@style/TitleTextStyle"
        android:layout_marginLeft="@dimen/openthos_about_size"
        android:layout_toRightOf="@+id/forward_view"
        android:drawableLeft="@drawable/openthos_title_download"
        android:text="@string/oenthos_download" />

    <TextView
        android:id="@+id/upload_view"
        style="@style/TitleTextStyle"
        android:layout_toRightOf="@+id/download_view"
        android:drawableLeft="@drawable/openthos_title_upload"
        android:text="@string/oenthos_upload" />


    <TextView
        android:id="@+id/delete_view"
        style="@style/TitleTextStyle"
        android:layout_toRightOf="@+id/upload_view"
        android:drawableLeft="@drawable/openthos_title_delete"
        android:text="@string/delete" />


    <!--<TextView-->
    <!--android:id="@+id/new_folder_view"-->
    <!--style="@style/TitleTextStyle"-->
    <!--android:layout_toEndOf="@+id/delete_view"-->
    <!--android:drawableLeft="@drawable/openthos_title_new_folder"-->
    <!--android:text="@string/oenthos_add_new_folder" />-->

    <TextView
        android:id="@+id/transfer_list_view"
        style="@style/TitleTextStyle"
        android:layout_toLeftOf="@+id/settings_view"
        android:drawableLeft="@drawable/openthos_transfer"
        android:text="@string/oenthos_transfer_list" />

    <ImageView
        android:id="@+id/settings_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/openthos_about_size"
        android:layout_marginRight="@dimen/openthos_about_size"
        android:layout_toLeftOf="@+id/account_button"
        android:src="@drawable/openthos_title_setting" />

    <LinearLayout
        android:id="@+id/account_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:background="@color/account_button_background_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/account_manager_view"
            style="@style/TitleTextStyle"
            android:layout_toRightOf="@+id/account_icon"
            android:text="account" />

        <ImageView
            android:id="@+id/account_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/default_avatar" />
    </LinearLayout>


</RelativeLayout>